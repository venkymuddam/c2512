// pseudo code

function squareOfNumber(number)
    return number * number 
function squareOfNumberTest()
    input number
    result = squareOfNumber(number)
    print "The square of", number, "is:", result

BEGIN
    squareOfNumberTest()
END


// c++ code
#include<iostream>
using namespace std;

int squareOfNumber(int number) {
    return number * number;
}

void squareOfNumberTest() {
    int number;
    cout << "Enter the number: " << endl;
    cin >> number;
    int result = squareOfNumber(number);
    cout << "The square of " << number << " is: " << result << endl;
}

int main() {
    squareOfNumberTest();
    return 0;
}
